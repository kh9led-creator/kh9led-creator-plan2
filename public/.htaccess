
RewriteEngine On
RewriteBase /

# 1. توجيه طلبات الـ API إلى الملف الصحيح
RewriteRule ^api$ api.php [L,QSA]

# 2. السماح بملف الـ API والملفات الموجودة فعلياً
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule . - [L]

# 3. توجيه باقي الطلبات لـ React Router
RewriteRule ^ index.html [L]

# الحماية من استعراض المجلدات
Options -Indexes
